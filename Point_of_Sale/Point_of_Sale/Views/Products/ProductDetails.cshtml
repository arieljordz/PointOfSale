@model Point_of_Sale.Models.tbl_Item
@{
    ViewData["Title"] = "Product Details";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="padding-top: 60px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Products</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Products</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa fa-shopping-bag pr-2"></i>Product Details</h3>
                </div>
                @Html.HiddenFor(x => x.Id)
                <div class="card-body">
                    <div class="row pl-2">
                        <button type="button" class="btn btn-success" id="btn_add_new_item"><i class="fa fa-plus mr-2"></i>Add New Item</button>
                    </div>

                    <div class="row pb-3 pt-3">
                        <div class="col-md-12">
                            <div class="dataTables_wrapper table-responsive dt-bootstrap4">
                                <table id="tbl_items" class="table table-bordered table-hover text-center" style="width:100%"></table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                </div>
            </div>

        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
    <!-- Modal -->
    <div id="modal_add_item" class="modal fade" role="dialog" data-backdrop="static">
        <div class="modal-dialog modal-md pt-5">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="modal_name"><i class="fa fa-shopping-bag pr-2"></i>Add New Item</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>
                @*<form id="form_member" enctype="multipart/form-data" novalidate="novalidate" class="form-horizontal">*@
                <form id="form_item" novalidate="novalidate">

                    <div class="modal-body">
                        @Html.HiddenFor(x => x.Id)
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Description, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Description" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Brand, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control", placeholder = "Brand" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Supplier, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.Supplier, new { @class = "form-control", placeholder = "Supplier" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Quantity, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", type = "number" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Price, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.DateExpired, new { @class = "label-control" })
                                    @Html.TextBoxFor(x => x.DateExpired, new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success float-right"><i class="fa fa-save pr-2"></i>Save</button>
                    </div>
                </form>
            </div>

        </div>
    </div>

</div>
<!-- /.content-wrapper -->
@section Scripts
    {
    <script>
        $(document).ready(function () {
            var Id = 0;

            ValidateItem();
            function ValidateItem() {
                $.validator.setDefaults({
                    submitHandler: function () {
                        SaveItem();
                    }
                });
                $('#form_item').validate({
                    rules: {
                        Description: {
                            required: true
                        },
                        Brand: {
                            required: true
                        },
                        Supplier: {
                            required: true
                        },
                        Quantity: {
                            required: true
                        },
                        Price: {
                            required: true
                        },
                        DateAdded: {
                            required: true
                        },
                        DateExpired: {
                            required: true
                        },
                    },
                    messages: {
                        Description: {
                            required: "This field is required"
                        },
                        Brand: {
                            required: "This field is required"
                        },
                        Supplier: {
                            required: "This field is required"
                        },
                        Quantity: {
                            required: "This field is required"
                        },
                        Price: {
                            required: "This field is required"
                        },
                        DateAdded: {
                            required: "This field is required"
                        },
                        DateExpired: {
                            required: "This field is required"
                        }
                    },
                    errorElement: 'span',
                    errorPlacement: function (error, element) {
                        error.addClass('invalid-feedback');
                        element.closest('.form-group').append(error);
                    },
                    highlight: function (element, errorClass, validClass) {
                        $(element).addClass('is-invalid');
                        console.log(element);
                    },
                    unhighlight: function (element, errorClass, validClass) {
                        $(element).removeClass('is-invalid');
                        console.log(element);
                    }
                });
            }

            LoadItems();
            function LoadItems() {
                $('#tbl_items').DataTable({
                    destroy: true,
                    responsive: true,
                    processing: false,
                    search: true,
                    stateSave: true,
                    info: true,
                    searching: true,
                    paging: true,
                    //order: [[1, "asc"], [2, "asc"]],
                    //lengthMenu: [[5, 10, 20, -1], [5, 10, 20, "All"]],
                    ajax: {
                        "url": "../Products/LoadItems",
                        "type": "POST",
                        "datatype": "JSON",
                        //"success": function (res) {
                        //    console.log(JSON.stringify(res.data));
                        //    console.log(res.data);
                        //}
                    },
                    columns:
                        [
                            { "data": "description", title: "Description", sClass: "text-center", orderable: false },
                            { "data": "brand", title: "Brand", sClass: "text-center", orderable: false },
                            { "data": "supplier", title: "Supplier", sClass: "text-center", orderable: false },
                            { "data": "quantity", title: "Quantity", sClass: "text-center", orderable: false },
                            { "data": "price", title: "Price", sClass: "text-center", orderable: false },
                            { "data": "dateAdded", title: "DateAdded", sClass: "text-center", orderable: false },
                            { "data": "dateExpired", title: "DateExpired", sClass: "text-center", orderable: false },
                            {
                                "data": "id", title: "Action", render: function (data) {
                                    return "<div class='row justify-content-center'>" +
                                        "<div class='dropdown dropleft'>" +
                                        "<button id='btnbars' type='button' class='btn btn-sm btn-success btnbars' data-toggle='dropdown'>" +
                                        "<i class='fa fa-bars'></i>" +
                                        "</button> <div class='dropdown-menu'>" +
                                        "<div class='container fluid'> " +
                                        "<a id='btnUpdate' class='btn btn-warning btn-sm fa fa-edit col-sm-12' style='margin-bottom: 3px; margin-top: 3px;'>" +
                                        "&nbspUpdate</a>" +
                                        "<br />" +
                                        "<a id='btnDelete' class='btn btn-danger btn-sm fa fa-edit col-sm-12' style='margin-bottom: 3px; margin-top: 3px; color: white;'>" +
                                        "&nbspDelete</a>" +
                                        "</div></div></div ></div>";
                                }
                            }
                        ]
                });

                $('#tbl_items tbody').off().on('click', 'tr', function (e) {
                    e.preventDefault();
                    if ($(e.target).is("[id^=btnUpdate],[id^=btnUpdate] i")) {
                        UpdateItem();
                    }
                    else if ($(e.target).is("[id^=btnDelete],[id^=btnDelete] i")) {
                        RemoveItem();
                    }
                    else if (!$(e.target).is("[id^=btnbars],[id^=btnbars] i")) {
                        if (!$(this).hasClass("dtactive")) {
                            $(this).parent().find("tr").removeClass("dtactive");
                            $(this).addClass("dtactive");
                            Id = SelectedValue("tbl_items", "id");
                            $("[name='Id']").val(Id);
                        } else {
                            $(this).removeClass("dtactive");
                            $("[name='Id']").val(0);
                            $("#form_item").trigger("reset");
                        }
                    }
                });
            }

            function UpdateItem() {
                if ($("[name='Id']").val() != 0) {
                    $.ajax({
                        url: "../Products/UpdateItem?Id= " + $("[name='Id']").val(),
                        type: "GET",
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (res) {
                            if (res.data != null) {
                                $("#modal_add_item").modal("show");
                                $("#modal_name").html("Update Item");
                                $("[name='Description']").val(res.data.description);
                                $("[name='Brand']").val(res.data.brand);
                                $("[name='Supplier']").val(res.data.supplier);
                                $("[name='Quantity']").val(res.data.quantity);
                                $("[name='Price']").val(TextMoneyFormat(res.data.price));
                                $("[name='DateExpired']").val(DateToText(res.data.dateExpired));
                            }
                        }
                    });
                }
                else {
                    Swal.fire('Information!', 'Please select a record first.', 'info');
                }
            }

            function RemoveItem() {
                if ($("[name='Id']").val() != 0) {
                    Swal.fire({
                        text: "Are you sure you want to delete this record?",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#28a745',
                        cancelButtonColor: '#dc3545',
                        confirmButtonText: 'Yes, delete it!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: '../Products/RemoveItem?&Id=' + $("[name='Id']").val(),
                                type: 'POST',
                                success: function (res) {
                                    if (res.success == true) {
                                        Swal.fire('Success!', 'Record has been deleted.', 'success');
                                        LoadItems();
                                        $("[name='Id']").val(0);
                                    } else {
                                        Swal.fire('Error!', res.msg, 'error');
                                    }
                                }
                            });
                        }
                    });
                }
                else {
                    Swal.fire('Information!', 'Please select a record first.', 'info');
                }
            }

            $("#btn_add_new_item").click(function (e) {
                e.preventDefault();
                LoadItems();
                NewItem();
            });

            function NewItem() {
                $("#form_item").trigger("reset");
                $("#modal_add_item").modal("show");
            }

            function SaveItem() {

                $.ajax({
                    url: "../Products/SaveItem",
                    type: 'POST',
                    data: ItemDetails(),
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        if (res.success == true) {
                            Swal.fire({
                                text: "Successfully saved.",
                                icon: "success",
                                showCancelButton: false,
                                confirmButtonColor: '#28a745',
                                confirmButtonText: "Ok"
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    $("#form_item").trigger("reset");
                                    LoadItems();
                                    if ($("[name='Id']").val() != 0) {
                                        $("#modal_add_item").modal("hide");
                                        $("#modal_name").html("Add New Item");
                                    }
                                    $("[name='Id']").val(0);
                                }
                            });
                        } else {
                            Swal.fire("Error!", res.message, "error");
                        }
                    }
                });
            }

            function ItemDetails() {
                var formData = new FormData();
                formData.append('Id', $("[name='Id']").val());
                formData.append('Description', $("[name='Description']").val());
                formData.append('Brand', $("[name='Brand']").val());
                formData.append('Supplier', $("[name='Supplier']").val());
                formData.append('Quantity', $("[name='Quantity']").val());
                formData.append('Price', $("[name='Price']").val());
                formData.append('DateAdded', $("[name='DateAdded']").val());
                formData.append('DateExpired', $("[name='DateExpired']").val());
                return formData;
            }

        });

        ActiveMenu("#product_details");

    </script>
}

