@model Point_of_Sale.Models.tbl_Item
@{
    ViewData["Title"] = "Collection";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper" style="padding-top: 60px;">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Collection</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Collection</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fa fa-money pr-2"></i>Collection Details</h3>
                </div>
                <div class="card-body">

                    <div class="row pb-3 pt-3">
                        <div class="col-md-12">
                            <div class="dataTables_wrapper table-responsive dt-bootstrap4">
                                <table id="tbl_items" class="table table-bordered table-hover text-center" style="width:100%"></table>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">

                            <div class="card card-secondary">
                                <div class="card-header">
                                    <h3 class="card-title"><i class="fa fa-sticky-note-o pr-2"></i>Generate List</h3>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label class="label-control">Filter By</label>
                                                <select class="form-control" name="filter_by">
                                                    <option value="1">Available Products</option>
                                                    <option value="2">Products Sold</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label class="label-control" for="">Date From</label>
                                                <input class="form-control" type="date" name="date_from">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group mb-0">
                                                <label class="label-control" for="">Date To</label>
                                                <input class="form-control" type="date" name="date_to">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer">
                                    <button type="button" class="btn btn-success float-right" id="btn_generate"><i class="fa fa-refresh mr-2"></i>Generate</button>
                                </div>
                            </div>

                        </div>
                        <div class="col-8">
                            <div class="row">
                                <iframe src="" id="frame_products" width="100%" height="600px"></iframe>
                            </div>
                        </div>


                    </div>

                </div>

                <div class="card-footer">
                </div>
            </div>


        </div><!--/. container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts
    {
    <script>
        $(document).ready(function () {
            var Id = 0;

        });

        ActiveMenu("#collection");

    </script>
}

